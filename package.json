{
	"private": true,
	"name": "node-typescript-starter",
	"version": "1.0.0",
	"description": "A very opinionated template for Node.js applications written in TypeScript.",
	"license": "UNLICENSED",
	"type": "module",
	"scripts": {
		"tsc:build": "tsc --project ./tsconfig.json",
		"tsc:check": "tsc --project ./tsconfig.json --noEmit",
		"tsc:watch": "tsc --project ./tsconfig.json --noEmit --watch",
		"build": "pnpm run tsc:build",
		"start": "node ./dist/main.js",
		"dev": "nodemon",
		"check": "biome check .",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"prepack": "pnpm run build"
	},
	"files": [
		"dist/**/*"
	],
	"dependencies": {
		"tslib": "2.8.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@semantic-release/changelog": "6.0.3",
		"@semantic-release/git": "10.0.1",
		"@swc-node/register": "1.10.9",
		"@tsconfig/node-lts": "22.0.1",
		"@tsconfig/strictest": "2.0.5",
		"@types/node": "20.17.48",
		"@types/semantic-release": "20.0.6",
		"@vitest/coverage-v8": "2.1.8",
		"@vitest/ui": "2.1.8",
		"nodemon": "3.1.9",
		"semantic-release": "24.2.1",
		"typescript": "5.7.3",
		"vitest": "2.1.8"
	},
	"release": {
		"branches": [
			"main",
			"next",
			{
				"name": "alpha",
				"prerelease": true
			},
			{
				"name": "beta",
				"prerelease": true
			}
		],
		"preset": "angular",
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/github",
			"@semantic-release/git"
		]
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"packageManager": "pnpm@10.2.1+sha512.398035c7bd696d0ba0b10a688ed558285329d27ea994804a52bad9167d8e3a72bcb993f9699585d3ca25779ac64949ef422757a6c31102c12ab932e5cbe5cc92"
}
